        // Section data
        const sections = {
            forum: {
                name: 'Q&A Forum',
                topics: [
                    {
                        title: "What is the motto of Xiamen University?",
                        author: "Tom",
                        question: "What is the motto of Xiamen University?",
                        answers: [
